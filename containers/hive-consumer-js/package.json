{
  "name": "hive-consumer-js",
  "version": "2.0.0-rc.3",
  "description": "Starter kit for Hive^io framework Consumers leveraging Node.js in Docker",
  "main": "./bin/start",
  "scripts": {
    "prebuild": "del dist",
    "build": "cross-env NODE_ENV=production babel src --out-dir dist",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run start:dev\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "release": "npm test && npm run build",
    "start": "NODE_ENV=production node ./bin/start",
    "start:dev": "npm run build && cross-env NODE_ENV=development node ./bin/start",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-consumer-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-consumer-js/issues"
  },
  "homepage": "https://github.com/fnalabs/hive-consumer-js#readme",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "kafkajs": "~1.11.0"
  },
  "devDependencies": {
    "@babel/cli": "~7.7.5",
    "@babel/core": "~7.7.5",
    "@babel/plugin-proposal-class-properties": "~7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "~7.7.4",
    "@babel/plugin-proposal-optional-chaining": "~7.7.5",
    "@babel/plugin-transform-modules-commonjs": "~7.7.5",
    "@babel/register": "~7.7.4",
    "babel-eslint": "~10.0.3",
    "babel-plugin-add-module-exports": "~1.0.2",
    "babel-plugin-istanbul": "~5.2.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "chai-http": "~4.3.0",
    "codecov": "~3.6.1",
    "cross-env": "~6.0.3",
    "del-cli": "~3.0.0",
    "dirty-chai": "~2.0.1",
    "mocha": "~6.2.2",
    "nodemon": "~2.0.1",
    "nyc": "~14.1.1",
    "proxyquire": "~2.1.3",
    "sinon": "~7.5.0",
    "standard": "~14.3.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "conf/**/*.js",
      "tst/**/*.js"
    ],
    "lines": 80,
    "statements": 80,
    "functions": 75,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        75,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
