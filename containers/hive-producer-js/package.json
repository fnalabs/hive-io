{
  "name": "hive-producer",
  "version": "2.0.0-rc.4",
  "private": true,
  "description": "Starter kit for Hive^io Framework Producer microservices leveraging Node.js in Docker",
  "main": "./bin/start",
  "scripts": {
    "prebuild": "del dist",
    "build": "cross-env NODE_ENV=production babel src --out-dir dist",
    "precoverage": "mkdir ../../coverage/hive-producer",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > ../../coverage/hive-producer/coverage.lcov",
    "dev": "nodemon -e js,json -w src -x \"npm run start:dev\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "init": "del node_modules && npm install --no-optional --no-package-lock",
    "release": "npm test && npm run build",
    "start": "NODE_ENV=production node ./bin/start",
    "start:dev": "npm run build && cross-env NODE_ENV=development node ./bin/start",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-producer-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-producer-js/issues"
  },
  "homepage": "https://github.com/fnalabs/hive-producer-js#readme",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "dependencies": {
    "fastify": "3.2.1",
    "fastify-cors": "4.1.0",
    "fastify-helmet": "5.0.0",
    "kafkajs": "1.12.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.4",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.10.4",
    "@babel/plugin-proposal-optional-chaining": "7.11.0",
    "@babel/plugin-transform-modules-commonjs": "7.10.4",
    "@babel/register": "7.10.5",
    "babel-eslint": "10.1.0",
    "babel-plugin-add-module-exports": "1.0.2",
    "babel-plugin-istanbul": "6.0.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-http": "4.3.0",
    "codecov": "3.7.2",
    "cross-env": "7.0.2",
    "del-cli": "3.0.1",
    "dirty-chai": "2.0.1",
    "mocha": "8.1.1",
    "nodemon": "2.0.4",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "sinon": "9.0.3",
    "standard": "14.3.4"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/config.js",
      "tst/**/*.js"
    ],
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 75,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        75,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "ignore": [
      "dist/"
    ],
    "parser": "babel-eslint"
  }
}
