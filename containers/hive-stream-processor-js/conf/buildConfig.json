{
    "OUTPUT_DEL": [
        "./dist/**/*",
        "./tst/coverage/**/*",
        "./app.tar.gz"
    ],
    "OUTPUT_SCRIPTS": "./dist",
    "OUTPUT_ZIP": [
        "bin/**/*",
        "conf/**/*",
        "dist/**/*",
        "npm-shrinkwrap.json",
        "package.json"
    ],

    "SRC_GULPFILE": "./gulpfile.babel.js",
    "SRC_SCRIPTS": "./src/**/*.js",
    "BABEL": {
        "plugins": [
            "transform-es2015-destructuring"
        ],
        "presets": ["es2017"]
    },

    "TST_UNIT": "./tst/specs/**/*.js",
    "MOCHA": {
        "reporter": "spec"
    },
    "ISTANBUL": {
        "INIT": {
            "includeUntested": true
        },
        "WRITE": {
            "dir": "./tst/coverage",
            "reportOpts": {
                "dir": "./tst/coverage"
            }
        }
    },

    "NODEMON": {
        "script": "./bin/start",
        "exec": "node",
        "env": {
            "NODE_ENV": "development",
            "PORT": "3000"
        },
        "restartable": "rs",
        "ext": "js json",
        "watch": [
            "conf/",
            "dist/",
            "bin/start",
            "npm-shrinkwrap.json",
            "package.json"
        ]
    }
}
