{
  "title": "Post",
  "description": "denormalizer used to create and modify posts from Content and Views",
  "$id": "https://hiveframework.io/api/v1/models/Post",
  "type": "object",
  "properties": {
    "id": {
      "description": "Content Id Value Object",
      "$ref": "https://hiveframework.io/api/v1/models/ContentId"
    },
    "text": {
      "description": "main post content",
      "type": "string",
      "maxLength": 140,
      "minLength": 2
    },
    "edited": {
      "description": "edited flag",
      "type": "boolean",
      "default": false
    },
    "enabled": {
      "description": "enabled flag",
      "type": "boolean",
      "default": true
    },
    "viewed": {
      "description": "total views of post content",
      "type": "integer",
      "default": 0
    }
  }
}
