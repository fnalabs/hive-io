{
  "name": "hive-io-rest-example",
  "version": "2.0.0-rc.3",
  "description": "An example REST module to help describe implementation details when leveraging the Hive^io framework.",
  "main": "index.js",
  "scripts": {
    "prebuild": "del dist",
    "build": "cross-env NODE_ENV=production bash ./bin/build",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run build\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "release": "npm test && npm run build",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 5000 --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-js-rest-example.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-js-rest-example/issues"
  },
  "homepage": "https://hiveframework.io/",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "fluent-logger": "~3.4.0",
    "hive-io": "~2.0.0-rc.3",
    "mongoose": "~5.8.0",
    "uuid": "~3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "~7.7.5",
    "@babel/core": "~7.7.5",
    "@babel/plugin-syntax-object-rest-spread": "~7.7.4",
    "@babel/plugin-transform-modules-commonjs": "~7.7.5",
    "@babel/register": "~7.7.4",
    "babel-eslint": "~10.0.3",
    "babel-plugin-add-module-exports": "~1.0.2",
    "babel-plugin-istanbul": "~5.2.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "codecov": "~3.6.1",
    "cross-env": "~6.0.3",
    "del-cli": "~3.0.0",
    "dirty-chai": "~2.0.1",
    "mocha": "~6.2.2",
    "nodemon": "~2.0.1",
    "nyc": "~14.1.1",
    "proxyquire": "~2.1.3",
    "sinon": "~7.5.0",
    "standard": "~14.3.1",
    "terser": "~4.4.2",
    "validator": "~12.1.0"
  },
  "nyc": {
    "exclude": [
      "src/schemas/mongoose/*",
      "src/util/*.js"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
