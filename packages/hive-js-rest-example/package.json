{
  "name": "hive-io-rest-example",
  "version": "2.0.0-rc",
  "description": "An example REST module to help describe implementation details when leveraging the Hive^io framework.",
  "main": "index.js",
  "scripts": {
    "prebuild": "del dist",
    "build": "NODE_ENV=production bash ./bin/build",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run build\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "prerelease": "del package.tar.gz",
    "release": "NODE_ENV=production npm test && npm run build && node ./bin/compress",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 5000 --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-js-rest-example.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-js-rest-example/issues"
  },
  "homepage": "https://hiveframework.io/",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "fluent-logger": "~2.7.0",
    "hive-io": "~2.0.0-rc.1",
    "mongoose": "~5.1.5",
    "uuid": "~3.2.1"
  },
  "devDependencies": {
    "archiver": "~2.1.1",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.3",
    "babel-eslint": "~8.2.3",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-istanbul": "~4.1.6",
    "babel-plugin-syntax-object-rest-spread": "~6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.2",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "codecov": "~3.0.2",
    "del-cli": "~1.1.0",
    "dirty-chai": "~2.0.1",
    "mocha": "~5.2.0",
    "nodemon": "~1.17.5",
    "nyc": "~12.0.2",
    "proxyquire": "~2.0.0",
    "sinon": "~6.0.0",
    "standard": "~11.0.0",
    "uglify-es": "~3.3.9",
    "validator": "~10.3.0"
  },
  "nyc": {
    "exclude": [
      "src/schemas/mongoose/*",
      "src/util/*.js"
    ],
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
