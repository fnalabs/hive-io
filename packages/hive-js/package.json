{
  "name": "hive-io",
  "version": "2.0.0-rc.1",
  "description": "A reactive, universal JavaScript library for the Hive^io framework.",
  "keywords": [
    "actor",
    "actors",
    "actor model",
    "actor system",
    "event sourcing",
    "distributed-systems",
    "isomorphic",
    "message",
    "message passing",
    "non-blocking",
    "reactive",
    "universal"
  ],
  "main": "index.js",
  "scripts": {
    "prebuild": "del dist",
    "build": "NODE_ENV=production bash ./bin/build",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run build\" & nodemon -e js -w tst -x \"npm test\" & karma start",
    "document": "documentation build -c documentation.yml -f html -o docs/ src/**",
    "fix": "standard --fix",
    "prerelease": "del package.tar.gz",
    "release": "NODE_ENV=production npm test && npm run build && node ./bin/compress",
    "postrelease": "npm run document",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-js/issues"
  },
  "homepage": "https://hiveframework.io/",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "schema-json-js": "~0.1.0"
  },
  "devDependencies": {
    "archiver": "~2.1.1",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.3",
    "babel-eslint": "~8.2.3",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-istanbul": "~4.1.6",
    "babel-plugin-syntax-object-rest-spread": "~6.13.0",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.2",
    "babel-register": "~6.26.0",
    "babelify": "~8.0.0",
    "browserify": "~16.2.2",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "codecov": "~3.0.2",
    "del-cli": "~1.1.0",
    "dirty-chai": "~2.0.1",
    "documentation": "~8.0.0",
    "karma": "~2.0.2",
    "karma-browserify": "~5.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-firefox-launcher": "~1.1.0",
    "karma-mocha": "~1.3.0",
    "mocha": "~5.2.0",
    "nodemon": "~1.17.5",
    "nyc": "~12.0.2",
    "sinon": "~6.0.0",
    "standard": "~11.0.1",
    "uglify-es": "~3.3.9",
    "watchify": "~3.11.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 75,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        75,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "ignore": [
      "docs/"
    ],
    "parser": "babel-eslint"
  }
}
