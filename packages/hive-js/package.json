{
  "name": "hive-io",
  "version": "2.0.0-rc.3",
  "description": "A reactive, universal JavaScript library for the Hive^io framework.",
  "keywords": [
    "actor",
    "actors",
    "actor model",
    "actor system",
    "event sourcing",
    "distributed-systems",
    "isomorphic",
    "message",
    "message passing",
    "non-blocking",
    "reactive",
    "universal"
  ],
  "main": "index.js",
  "scripts": {
    "prebuild": "del dist",
    "build": "cross-env NODE_ENV=production bash ./bin/build",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon -e js,json -w src -w conf -x \"npm run build\" & nodemon -e js -w tst -x \"npm test\" & karma start",
    "predocument": "del docs/*.html",
    "document": "jsdoc --configure .jsdoc.json --verbose",
    "postdocument": "sed -i 's/Documentation/hive-io/g' docs/index.html docs/Actor.html docs/MessageActor.html docs/Model.html docs/Schema.html docs/System.html docs/global.html",
    "fix": "standard --fix",
    "release": "npm run test:all && npm test && npm run build",
    "postrelease": "npm run document",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --recursive --exit 'tst/**/*.spec.js'",
    "test:all": "cross-env NODE_ENV=production mocha --require '@babel/register' --exit 'tst/**/*.spec.js'",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/hive-js.git"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/hive-js/issues"
  },
  "homepage": "https://hiveframework.io/",
  "author": "Adam Eilers",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "model-json-js": "~1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "~7.7.5",
    "@babel/core": "~7.7.5",
    "@babel/plugin-syntax-object-rest-spread": "~7.7.4",
    "@babel/plugin-transform-modules-commonjs": "~7.7.5",
    "@babel/register": "~7.7.4",
    "babel-eslint": "~10.0.3",
    "babel-plugin-add-module-exports": "~1.0.2",
    "babel-plugin-istanbul": "~5.2.0",
    "babelify": "~10.0.0",
    "browserify": "~16.5.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "codecov": "~3.6.1",
    "cross-env": "~6.0.3",
    "del-cli": "~3.0.0",
    "dirty-chai": "~2.0.1",
    "jsdoc": "~3.6.3",
    "karma": "~4.4.1",
    "karma-browserify": "~6.1.0",
    "karma-browserstack-launcher": "~1.5.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-firefox-launcher": "~1.2.0",
    "karma-mocha": "~1.3.0",
    "minami": "~1.2.3",
    "mocha": "~6.2.2",
    "nodemon": "~2.0.1",
    "nyc": "~14.1.1",
    "sinon": "~7.5.0",
    "standard": "~14.3.1",
    "terser": "~4.4.2",
    "watchify": "~3.11.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 75,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        75,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "ignore": [
      "docs/"
    ],
    "parser": "babel-eslint"
  }
}
